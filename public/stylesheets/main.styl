@import 'nib'

light = #a9a9a9
lighter = #eee
blue = #00ABFA
dark = #222

@import 'import/_mixins'

@import 'import/_globals'

@import 'import/_forms'

// blog post

.post
  padding: 8px 10px
  smooth()
  roundedges(#e0e0e5, #c8c7cc)
  text-shadow  1px 1px 0 white
  margin-bottom 10px
  shade()

span.body
  color dark
  smooth()

//everythign else

ul#flash
  fixed top 10px left 15px
  z-index 200
  margin 0
  padding 0
  li
    list-style: none
    margin 8px 0
    padding 8px 15px
    border 1px solid light
    border-radius 5px
    font-size 12px
    background white
    box-shadow 0 0 4px lighter 

h2
  text-shadow 1px 1px 0 white
  color #58575A