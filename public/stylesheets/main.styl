@import 'nib'

light = #a9a9a9
lighter = #eee
blue = #00ABFA
dark = #222

@import 'import/_mixins'

@import 'import/_globals'

@import 'import/_forms'

// blog post

.post
  border 1px solid light
  border-radius 5px
  margin: 5px 0
  padding: 8px 10px
  smooth()

span.body
  color dark
  smooth()

//everythign else

ul#flash
  fixed top 10px left 15px
  z-index 200
  margin 0
  padding 0
  li
    list-style: none
    margin 8px 0
    padding 8px 15px
    border 1px solid light
    border-radius 5px
    font-size 12px
    background white
    box-shadow 0 0 4px lighter 